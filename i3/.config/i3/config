	set $green #8c9440
	set $yellow #dfa752
	set $blue #5f819d
	set $purple #85678f
	set $cyan #5e8d87

	set $lred #cc6666
	set $lgreen #b5bd68
	set $lyellow #f0c674
	set $lblue #81a2be
	set $lpurple #b294bb
	set $lcyan #8abeb7
